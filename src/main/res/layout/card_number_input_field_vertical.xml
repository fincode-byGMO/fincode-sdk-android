<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/cardNumberItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_number"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/cardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_input_field"
        android:ems="10"
        android:hint="@string/card_number"
        android:inputType="number"
        android:textSize="14sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardNumberError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/card_number_no_input_message"
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

</LinearLayout>