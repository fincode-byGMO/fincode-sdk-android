<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/expirationDateItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/expiration_date"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/expirationDateItem"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/expireMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="@string/expiration_date_month_hint"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/expireYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="@string/expiration_date_year_hint"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/expireMonth"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>