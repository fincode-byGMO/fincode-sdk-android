<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!--カード番号-->
<!--        <include layout="@layout/card_number_input_field_vertical"/>-->
        <!--有効期限-->
        <views.CardNumberInputFieldView
            android:id="@+id/CardNumberInputField"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <include layout="@layout/expiration_date_input_field_vertical"/>
        <!--セキュリティコード-->
        <include layout="@layout/security_code_input_field_vertical"/>
        <!--カード名義人-->
        <include layout="@layout/label_holder_name_input_field_vertical"/>
        <!--クレジットカード登録ボタン-->
        <include layout="@layout/credit_card_registration_button_vertical"/>

    </LinearLayout>

</LinearLayout>