<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="dataViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeDataViewModel"/>
        <variable name="actionViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeActionViewModel"/>
        <import type="jp.gmopg.japanpost.fincodesdk.enumeration.PartsType"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/partPadding">

        <TextView
            android:id="@+id/cardNumberItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registered_card"
            android:textSize="@dimen/titleFontSize"/>

        <Spinner
            android:id="@+id/sample_spinner_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/payment_times_array"
            android:background="@drawable/frame_border_default"
            app:viewModelForSpinnerList="@{dataViewModel}"
            />

    </LinearLayout>

</layout>