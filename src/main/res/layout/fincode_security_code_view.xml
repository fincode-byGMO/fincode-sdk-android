<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="dataViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeDataViewModel"/>
        <variable name="actionViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeActionViewModel"/>
        <import type="jp.gmopg.japanpost.fincodesdk.enumeration.PartsType"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/partPadding">

        <TextView
            android:id="@+id/securityCodeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_code"
            android:textSize="@dimen/titleFontSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textFieldMarginTop">

                <EditText
                    android:id="@+id/securityCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{dataViewModel.securityCodePart.isError ? @drawable/frame_border_error : @drawable/frame_border_default}"
                    android:hint="@string/security_code_hint"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/textFieldPadding"
                    android:text="@={dataViewModel.securityCodePart.value}"
                    android:textSize="@dimen/textFieldFontSize"
                    app:partsTypeForSecurityCode="@{PartsType.SECURITY_CODE}"
                    app:selectedBorderForSecurityCode="@{@drawable/frame_border_selected}"
                    app:viewModelForSecurityCode="@{dataViewModel}" />

                <ImageView
                    android:id="@+id/cardImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/securityCode"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@{dataViewModel.securityCodePart.isError ? @drawable/ic_cvc_er : @drawable/ic_cvc}" />

            </RelativeLayout>

            <TextView
                android:id="@+id/expireMonthNotEnteredError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:paddingTop="@dimen/errorMsgTopPadding"
                android:textSize="@dimen/errorMsgFontSize"
                android:textColor="#FF0000"
                app:errorVisibile="@{dataViewModel.securityCodePart.isError}"
                app:viewModelPart="@{dataViewModel.securityCodePart}"
                app:formatErrorMsg="@{&quot;&quot;}"
                app:noInputErrorMsg="@{@string/security_code_no_input_message}"/>

        </LinearLayout>

    </LinearLayout>

</layout>