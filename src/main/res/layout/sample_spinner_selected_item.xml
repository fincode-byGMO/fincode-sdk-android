<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:add="http://schemas.android.com/tools">

    <data>
        <variable name="dataViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeDataViewModel"/>
        <variable name="actionViewModel" type="jp.gmopg.japanpost.fincodesdk.viewmodel.FincodeActionViewModel"/>
        <import type="jp.gmopg.japanpost.fincodesdk.enumeration.CardBrandType"/>
        <import type="jp.gmopg.japanpost.fincodesdk.adapter.CardSelectionListAdapter"/>
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/titleFontSize"
            add:cardNumberText="@{dataViewModel}"
            />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            app:cardImageView="@{dataViewModel}"
            />

        <TextView
            android:id="@+id/expir_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="@dimen/titleFontSize"
            add:expirText="@{dataViewModel}"
            />
    </LinearLayout>
</layout>