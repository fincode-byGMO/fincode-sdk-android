<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/visaImage"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:src="@drawable/icn_card_brand_v"/>

    <ImageView
        android:id="@+id/masterImage"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_toRightOf="@+id/visaImage"
        android:src="@drawable/icn_card_brand_m"/>

    <ImageView
        android:id="@+id/jcbImage"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/masterImage"
        android:src="@drawable/jcb"/>

    <ImageView
        android:id="@+id/amexImage"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/jcbImage"
        android:layout_below="@+id/masterImage"
        android:src="@drawable/icn_card_brand_a"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/amexImage"
        android:layout_below="@+id/masterImage"
        android:src="@drawable/icn_card_brand_d"/>

</RelativeLayout>